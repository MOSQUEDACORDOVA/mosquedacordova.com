---

<Temporal>
    <div class="contenedor-mascara">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            class="svg-mascara"
            fill="none"
            viewBox="0 0 112 111"
        >
            <path fill="#000" d="M111.95 111H.95V0h111v111ZM52 52v8h8v-8h-8Z"
            ></path>
        </svg>
    </div>

    <div class="contenido-mascarado">
        <div class="contenido">
            <!-- contenido visible solo dentro del SVG -->
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. ... Hola mundo
            chao y bueno adios tambien xq quiero er
        </div>
    </div>
    <div class="separante1"></div>
<div class="separante2"></div>
    <style>
        .contenedor-mascara {
            background-color: #f00;
            width: 100vw;
            height: 100vh;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            position: absolute;
        }

        .svg-mascara {
            width: 100vh;
            transform: scale(50);
        }

        .contenido-mascarado {
            width: 100px;
            height: 400px;
            position: relative;
        }
        .separante1{
        background-color: #2332ff;
        width: 50vw;
        height: 100vh;
    }
    .separante2{
        background-color: #94ff94;
        width: 50vw;
        height: 100vh;
    }
    </style>
</Temporal>

<script>
    import { gsap } from "gsap";
    import { GSDevTools } from "gsap/GSDevTools";
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    gsap.registerPlugin(GSDevTools);
    gsap.registerPlugin(ScrollTrigger) 

    gsap.to(".svg-mascara", {
        scrollTrigger: {
        trigger: '.svg-mascara',
        start: "top center",
        end: "top top",
        scrub: true,
        markers: true
    },
        scale: 1,
    });

    //GSDevTools.create();
</script>
