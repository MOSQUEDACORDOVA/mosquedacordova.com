<style>
	.cuerpo_tarjeta_previa_animacion {
		overflow: hidden;
	}
	.svgBtn {
		fill: none !important;
		height: 28px;
		width: 28px;
	}
	.svgEspecial {
		fill: none !important;
		height: 34px;
		width: 34px;
	}
	.star {
		height: 12px;
		fill: #ffde46;
	}
	.stars {
		display: flex;
		align-items: center;
		gap: 2px;
		position: relative;
		overflow: hidden;
	}

	/* Efecto de "brillo" */
	.shine,
	.stars::after {
		width: 100%; /* Ancho del brillo */
		height: 100%; /* Alto del brillo */
		background: linear-gradient(
			90deg,
			rgba(255, 255, 255, 0) 0%,
			rgba(255, 255, 255, 0.5) 50%,
			rgba(255, 255, 255, 0) 100%
		);
		position: absolute;
		top: 0;
		left: -100%; /* Empieza fuera del contenedor */
	}
	.shine {
		animation: shine-animation 1s infinite; /* Animación */
	}
	.stars::after {
		animation: shine-animation 2s infinite; /* Animación */
		content: " ";
	}
	.profile_image {
		width: 96px;
		height: 96px;
		background-color: #ddd;
		background-image: url("/assets/yo.webp");
		background-size: cover;
		border-radius: 1000px;
		border: 3px solid #f8f8f8;
		margin-top: -64px;
		position: relative;
		overflow: hidden;
	}
	@keyframes shine-animation {
		0% {
			left: -100%;
		}
		100% {
			left: 100%;
		}
	}
	.box {
		display: flex;
		gap: 2px;
		flex-direction: column;
		width: 30px;
		height: 100vh;
		flex-shrink: 0;
		transform: translateY(100vh);
	}
	.contenedor_banner {
		height: 120px;
		background-color: #000;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		position: relative;
	}
	.container_img_banner {
		position: absolute;
		top: 0;
		right: 0;
		bottom: 0;
		width: 100%;
		height: 100%;
		overflow: hidden;
	}
	.container_img_banner img {
		width: 100%;
		object-fit: cover;
		position: absolute;
		right: 0;
	}
	.banner {
		height: 600px;
		width: 140%;
		flex-shrink: 0;
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 2px;
		position: absolute;
	}
	.img_portfolio {
		width: 100%;
		background-color: #f4f4f4;
		border-radius: 2px;
		flex-shrink: 0;
		overflow: hidden;
		display: flex;
		align-items: end;
	}

	@media (min-width: 767px) {
		.profile_image {
			width: 148px;
			height: 148px;
			margin-top: -96px;
		}
		.img_portfolio {
			border-radius: 4px;
		}
		.contenedor_banner {
			height: 220px;
		}
		.box {
			width: 100px;
			gap: 4px;
		}
		.banner {
			gap: 4px;
		}
	}
</style>

<script>

	import { gsap } from "gsap";

	const tl1 = gsap.timeline({ id: "timeline1" });
	tl1
		.to("body", {
			overflow: "auto",
			duration: 0,
		})
		.to("html", {
			overflow: "auto",
			duration: 0,
		})
		.to(".contenedor_fuera_de_mascara", {
			display: "flex",
			duration: 0,
		})
		.to(".icon_alerta_scroll", {
			y: "16",
			duration: 0.5,
			repeat: -1,
			yoyo: true,
			ease: "power1.in",
		});


</script>
