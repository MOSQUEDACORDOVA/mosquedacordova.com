<script>
	document.querySelectorAll<HTMLElement>(".img_portfolio").forEach((div) => {
		div.style.height = `${Math.floor(Math.random() * 320) + 60}vh`;
	});

	import { gsap } from "gsap";

	const tl = gsap.timeline();

	tl.from(".containerx_padre", {
		y: "50vh",
		scale: 5,
		duration: 5,
		delay: 1.5,
	});

	tl.to(".box", {
		y: "-100px",
		duration: 1,
		delay: -4,
		ease: "back.out",
	});

	tl.to(".containerx", {
		rotate: -24,
		duration: 1,
		delay: -3,
	});

	document.querySelectorAll<HTMLElement>(".box").forEach((box, index) => {
		gsap.from(box, {
			y: "100vh",
			duration: gsap.utils.random(1, 3),
			delay: index * 0.1, // acá sí usamos el índice
		});
	});
</script>
